<Window x:Class="Controller.ControllerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controller"
        mc:Ignorable="d"
        Title="ControllerWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">            
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="Width" Value="116"/>
        </Style>
    </Window.Resources>
    <WrapPanel Orientation="Horizontal">
        <Label Content="Broadcast Messaages" Width="800" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18"/>
        <TextBlock Text="Click a button to broadcast a message." Width="800" FontSize="12" TextAlignment="Center"/>
        <Button Content="Hello World" x:Name="btnHelloWorld"/>

    </WrapPanel>
</Window>

<Window x:Class="Controller.ReceiverTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Controller"
        mc:Ignorable="d"
        Title="ReceiverTestWindow" Height="450" Width="800">
    <DockPanel>
        <Label Content="Broadcast Messaages" Width="800" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18" DockPanel.Dock="Top"/>
        <TextBlock Text="Click a button to broadcast a message." Width="800" FontSize="12" TextAlignment="Center" DockPanel.Dock="Top"/>
        <!--<ScrollViewer DockPanel.Dock="Bottom">-->
        <TextBox x:Name="tbContent" Margin="8" Padding="4" Height="auto" Background="LightGray" DockPanel.Dock="Bottom"/>
        <!--</ScrollViewer>-->
    </DockPanel>
</Window>
